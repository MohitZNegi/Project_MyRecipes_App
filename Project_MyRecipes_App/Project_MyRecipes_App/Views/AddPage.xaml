<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project_MyRecipes_App.Views.AddPage">

        
            <!-- Layout children vertically -->
            <StackLayout Margin="20">
                <Editor  Placeholder="Enter your title"
                Text="{Binding Title}"
                HeightRequest="100" />
                <Editor Placeholder="Enter your person"
                Text="{Binding CreatedBy}"
                HeightRequest="100" />
                <Editor Placeholder="Enter your ingredients"
                Text="{Binding Ingredients}"
                HeightRequest="100" />
                <Editor Placeholder="Enter your steps"
                Text="{Binding Steps}"
                HeightRequest="100" />
                <!-- Layout children in two columns -->
                <Grid ColumnDefinitions="*,*">
                    <Button Text="Save" 
                    Clicked="OnSaveButtonClicked" />
                    <Button Grid.Column="1"
                    Text="Delete" 
                    Clicked="OnDeleteButtonClicked"/>
                </Grid>
            </StackLayout>
        

</ContentPage>